DECLARE i As Integer

DECLARE count As Integer

DECLARE inputstr As String

DECLARE x As Integer

DECLARE firstchar As CHARACTER

DECLARE f_string As String

DECLARE cmpchar As CHARACTER



i = 0

cmpchar = ‘’



count = 0

inputstr = “”

x = 0

firstchar = ‘’

f_string = ‘’



INPUT   "Enter the String :",inputstr  


firstchar = Mid  inputstr, 1, 1  

f_string = f_string + firstchar

PRINT   firstchar  

For i = 2 To Len  inputstr  

cmpchar = Mid  inputstr, i, 1  

PRINT  cmpchar  

If firstchar <> Mid  inputstr, i, 1   Then

f_string = f_string + cmpchar

PRINT  f_string  

Else : If count = 0 Then

f_string = f_string + "*"



PRINT f_string  



End If



count = count + 1





End If









Next

PRINT   f_string  

DECLARE i As Integer

DECLARE count As Integer

DECLARE inputstr As String

DECLARE x As Integer

DECLARE cmpchar As CHARACTER

DECLARE mostrep As CHARACTER

i = 0

count = 0

inputstr = ""

x = 0

cmpchar = ""



INPUT"Enter the String :",inputstr


For i = 1 To Len(inputstr)

cmpchar = Mid(inputstr, i, 1)

If cmpchar = Mid(inputstr, i + 1, 1) Then

count = count + 1

Else : If count > x Then

x = count


mostrep = Mid(inputstr, i - 1, 1)

count = 0



End If



Next

PRINT"MOST REPEATED CHARACTER :" + mostrep

PRINT"NUMBER OF REPITIONS :" + x + 1
